@model ProductScraper.Models.EntityModels.ScrapeConfig

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Configuration?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            <label>Name</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            <label>Link</label>
        </dt>
        <dd class="col-sm-9">
            <a target="_blank" href="@Model.URL">@Model.URL</a>
        </dd>
        <dt class="col-sm-3">
            <label>Name xPath</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ProductNamePath)
        </dd>
        <dt class="col-sm-3">
            <label>Price xPath</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ProductPricePath)
        </dd>
        <dt class="col-sm-3">
            <label>Currency</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Currency)
        </dd>
        <dt class="col-sm-3">
            <label>Availability xPath</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ProductAvailabilityPath)
        </dd>
        <dt class="col-sm-3">
            <label>Availability value</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ProductAvailabilityValue)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
