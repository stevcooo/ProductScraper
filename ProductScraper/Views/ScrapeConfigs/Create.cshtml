@model ProductScraper.Models.EntityModels.ScrapeConfig

@{
    ViewData["Title"] = "Create";
}

<h3>Create Configuration</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Link</label>                
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name xPath</label>
                <input asp-for="ProductNamePath" class="form-control" />
                <span asp-validation-for="ProductNamePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Price xPath</label>
                <input asp-for="ProductPricePath" class="form-control" />
                <span asp-validation-for="ProductPricePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Currency</label>
                <input asp-for="Currency" class="form-control" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Availability xPath</label>
                <input asp-for="ProductAvailabilityPath" class="form-control" />
                <span asp-validation-for="ProductAvailabilityPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Aavailability value</label>                
                <input asp-for="ProductAvailabilityValue" class="form-control" />
                <span asp-validation-for="ProductAvailabilityValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Is Product availability value an atribute</label>                
                <input asp-for="ProductAvailabilityIsAtributeValue" class="form-control" />
                <span asp-validation-for="ProductAvailabilityIsAtributeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
