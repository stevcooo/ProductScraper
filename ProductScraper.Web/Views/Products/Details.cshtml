@model ProductScraper.Models.EntityModels.ProductInfo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecondPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Availability.HasValue)
            {
                if (Model.Availability.Value)
                {
                    <i class="fas fa-check text-success"></i>
                }
                else
                {
                    <i class="fas fa-times text-danger"></i>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastCheckedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastCheckedOn)
        </dd>
        <dt class="col-sm-2">
            Changed
        </dt>
        <dd class="col-sm-10">            
            @if (Model.HasChangesSinceLastTime)
            {
                <i class="fas fa-check text-success"></i>
            }
            else
            {
                <i class="fas fa-times text-danger"></i>
            }
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
